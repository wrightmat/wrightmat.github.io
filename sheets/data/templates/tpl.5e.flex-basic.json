{
  "id": "tpl.5e.flex-basic",
  "schema": "sys.dnd5e",
  "title": "5e \u2014 Flex Basic",
  "content": [
    {
      "el": "input",
      "id": "name",
      "label": "Name",
      "bind": "@name",
      "input": "text"
    },
    {
      "el": "container",
      "id": "coreGrid",
      "layout": {
        "mode": "grid",
        "cols": 3,
        "gap": 8
      },
      "children": [
        {
          "el": "input",
          "label": "STR",
          "bind": "@abilities.strength",
          "input": "number",
          "min": 1,
          "max": 30
        },
        {
          "el": "text",
          "label": "STR Mod",
          "formula": "floor((@abilities.strength-10)/2)"
        },
        {
          "el": "roller",
          "label": "Attack",
          "expr": "1d20+@mod.str"
        }
      ]
    },
    {
      "el": "tabs",
      "id": "lowerTabs",
      "tabs": [
        {
          "label": "Inventory",
          "content": [
            {
              "el": "list",
              "label": "Inventory",
              "bind": "@inventory",
              "item": {
                "content": [
                  {
                    "el": "input",
                    "bind": "item.name",
                    "label": "Item"
                  },
                  {
                    "el": "input",
                    "bind": "item.qty",
                    "label": "Qty",
                    "input": "number",
                    "min": 0
                  }
                ]
              },
              "allowAdd": true,
              "allowRemove": true,
              "allowReorder": true
            }
          ]
        },
        {
          "label": "States",
          "content": [
            {
              "el": "toggle",
              "label": "Stance",
              "bind": "@stance",
              "states": [
                "Aggressive",
                "Defensive",
                "Neutral"
              ]
            },
            {
              "el": "tags",
              "label": "Traits",
              "bind": "@traits",
              "options": [
                "brave",
                "lucky",
                "alert"
              ],
              "multi": true
            },
            {
              "el": "clock",
              "label": "Exhaustion",
              "bind": "@exhaustion",
              "max": 6
            },
            {
              "el": "timer",
              "label": "Concentration",
              "bind": "@timers.concentration",
              "mode": "up"
            }
          ]
        }
      ]
    }
  ],
  "theme": {
    "radius": 8,
    "gap": 8,
    "fontScale": 1.0
  }
}