{
  "$id": "https://your.app/template.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Universal Sheet Template",
  "type": "object",
  "required": [
    "id",
    "schema",
    "title",
    "content"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "theme": {
      "type": "object"
    },
    "content": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Element"
      }
    }
  },
  "$defs": {
    "Element": {
      "type": "object",
      "required": [
        "el"
      ],
      "properties": {
        "el": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "bind": {
          "type": "string"
        },
        "formula": {
          "type": "string"
        },
        "visible": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "class": {
          "type": "string"
        },
        "style": {
          "type": "string"
        },
        "input": {
          "type": "string"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "options": {},
        "multi": {
          "type": "boolean"
        },
        "states": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "layout": {
          "type": "object"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Element"
          }
        },
        "tabs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "label",
              "content"
            ],
            "properties": {
              "label": {
                "type": "string"
              },
              "content": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/Element"
                }
              }
            }
          }
        },
        "item": {
          "type": "object",
          "properties": {
            "content": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/Element"
              }
            }
          }
        }
      },
      "additionalProperties": true
    }
  }
}