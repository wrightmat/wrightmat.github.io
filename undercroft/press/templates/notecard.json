{
  "id": "notecard",
  "title": "Notecard (5 \u00d7 7)",
  "description": "Single oversized notecard aligned to the center of the letter page.",
  "type": "card",
  "formats": [
    {
      "id": "letter",
      "label": "US Letter",
      "sizeId": "letter",
      "orientations": [
        "portrait",
        "landscape"
      ],
      "defaultOrientation": "portrait"
    }
  ],
  "supportedSources": [
    "ddb",
    "srd",
    "json",
    "manual"
  ],
  "card": {
    "width": 5,
    "height": 7,
    "gutter": 0,
    "safeInset": 0.2,
    "columns": 1,
    "rows": 1
  },
  "pages": {
    "front": {
      "repeat": "@features",
      "layout": {
        "type": "stack",
        "gap": 5,
        "children": [
          {
            "type": "row",
            "gap": 2,
            "columns": [
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "Feature",
                  "className": "card-meta"
                }
              },
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "",
                  "className": "card-meta text-end"
                }
              }
            ]
          },
          {
            "type": "field",
            "component": "text",
            "text": "@name",
            "className": "card-title",
            "textSize": "lg",
            "textStyles": {
              "bold": true
            }
          },
          {
            "type": "field",
            "component": "text",
            "text": "@description",
            "className": "card-body-text"
          },
          {
            "type": "field",
            "component": "text",
            "text": "",
            "className": "card-footer"
          }
        ]
      }
    },
    "back": {
      "repeat": "@inventory.0",
      "layout": {
        "type": "stack",
        "gap": 5,
        "children": [
          {
            "type": "row",
            "gap": 2,
            "columns": [
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "Item",
                  "className": "card-meta"
                }
              },
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "@quantity",
                  "className": "card-meta text-end"
                }
              }
            ]
          },
          {
            "type": "field",
            "component": "text",
            "text": "@name",
            "className": "card-title",
            "textSize": "lg",
            "textStyles": {
              "bold": true
            }
          },
          {
            "type": "field",
            "component": "text",
            "text": "@notes",
            "className": "card-body-text"
          },
          {
            "type": "field",
            "component": "text",
            "text": "@weight",
            "className": "card-footer"
          }
        ]
      }
    }
  }
}
