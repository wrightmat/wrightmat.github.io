{
  "id": "chip-grid",
  "title": "Chip Grid (1 in circles)",
  "description": "Print-ready grid of 1-inch circular chips with adjustable spacing and safe inset.",
  "type": "chip",
  "formats": [
    {
      "id": "letter",
      "label": "US Letter",
      "sizeId": "letter",
      "orientations": [
        "portrait",
        "landscape"
      ],
      "defaultOrientation": "portrait"
    },
    {
      "id": "a4",
      "label": "A4",
      "sizeId": "a4",
      "orientations": [
        "portrait",
        "landscape"
      ],
      "defaultOrientation": "portrait"
    }
  ],
  "supportedSources": [
    "ddb",
    "srd",
    "json",
    "manual"
  ],
  "card": {
    "width": 1,
    "height": 1,
    "gutter": 0.1,
    "safeInset": 0.05,
    "columns": 7,
    "rows": 9
  },
  "pages": {
    "front": {
      "repeat": "@chips",
      "layout": {
        "type": "stack",
        "gap": 1,
        "align": "center",
        "className": "d-flex flex-column align-items-center text-center",
        "children": [
          {
            "type": "field",
            "component": "text",
            "text": "@label",
            "textSize": "sm",
            "className": "chip-meta mb-0"
          },
          {
            "type": "field",
            "component": "image",
            "url": "@image",
            "width": 0.5,
            "height": 0.5,
            "className": "press-image chip-image"
          },
          {
            "type": "field",
            "component": "text",
            "text": "@subtitle",
            "textSize": "sm",
            "className": "chip-meta mb-0"
          }
        ]
      }
    }
  }
}
