{
  "id": "letter-sheet",
  "title": "Letter Character Spread",
  "description": "Full-page character layout with matching notes back for double-sided runs.",
  "type": "sheet",
  "formats": [
    { "id": "letter", "label": "US Letter", "sizeId": "letter", "orientations": ["portrait", "landscape"], "defaultOrientation": "portrait" }
  ],
  "supportedSources": ["ddb", "srd", "json", "manual"],
  "pages": {
    "front": {
      "data": "@front",
      "layout": {
        "type": "stack",
        "gap": 6,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "row",
                "gap": 2,
                "columns": [
                  { "node": { "type": "field", "component": "heading", "text": "@title" } },
                  { "node": { "type": "field", "component": "text", "text": "@badge", "className": "badge text-bg-primary" } }
                ]
              },
              { "type": "field", "component": "text", "text": "@subtitle", "className": "mb-0 text-body-secondary" }
            ]
          },
          {
            "type": "row",
            "className": "sheet-grid",
            "gap": 4,
            "columns": [
              {
                "node": {
                  "type": "stack",
                  "className": "panel-box",
                  "gap": 4,
                  "children": [
                    { "type": "field", "component": "heading", "text": "Character Snapshot", "className": "fw-semibold" },
                    {
                      "type": "row",
                      "gap": 3,
                      "columns": [
                        { "node": { "type": "field", "component": "stat", "label": "@stats.0.label", "text": "@stats.0.value" } },
                        { "node": { "type": "field", "component": "stat", "label": "@stats.1.label", "text": "@stats.1.value" } },
                        { "node": { "type": "field", "component": "stat", "label": "@stats.2.label", "text": "@stats.2.value" } },
                        { "node": { "type": "field", "component": "stat", "label": "@stats.3.label", "text": "@stats.3.value" } },
                        { "node": { "type": "field", "component": "stat", "label": "@stats.4.label", "text": "@stats.4.value" } },
                        { "node": { "type": "field", "component": "stat", "label": "@stats.5.label", "text": "@stats.5.value" } }
                      ]
                    },
                    { "type": "field", "component": "heading", "text": "Highlights" },
                    { "type": "field", "component": "text", "text": "Quick summary of combat moves, exploration tricks, and social edges used to confirm spacing.", "className": "mb-0" },
                    { "type": "field", "component": "list", "itemsBind": "@highlights" }
                  ]
                }
              },
              {
                "node": {
                  "type": "stack",
                  "className": "panel-box",
                  "gap": 3,
                  "children": [
                    { "type": "field", "component": "heading", "text": "Inventory & Slots" },
                    { "type": "field", "component": "text", "text": "Slots mirror the Scriptorium starter pack for quick alignment.", "className": "mb-0" },
                    { "type": "field", "component": "list", "itemsBind": "@inventory" }
                  ]
                }
              }
            ]
          },
          { "type": "field", "component": "text", "text": "@footer", "className": "text-body-secondary small mb-0" }
        ]
      }
    },
    "back": {
      "data": "@back",
      "layout": {
        "type": "stack",
        "gap": 6,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "row",
                "gap": 2,
                "columns": [
                  { "node": { "type": "field", "component": "heading", "text": "@title" } },
                  { "node": { "type": "field", "component": "text", "text": "@badge", "className": "badge text-bg-primary" } }
                ]
              },
              { "type": "field", "component": "text", "text": "@subtitle", "className": "mb-0 text-body-secondary" }
            ]
          },
          {
            "type": "stack",
            "className": "panel-box flex-grow-1",
            "gap": 4,
            "children": [
              { "type": "field", "component": "heading", "text": "Session Log" },
              { "type": "field", "component": "noteLines" },
              {
                "type": "row",
                "className": "panel-columns",
                "gap": 3,
                "columns": [
                  {
                    "node": {
                      "type": "stack",
                      "className": "panel-box",
                      "gap": 2,
                      "children": [
                        { "type": "field", "component": "heading", "text": "Allies" },
                        { "type": "field", "component": "text", "text": "@allies" }
                      ]
                    }
                  },
                  {
                    "node": {
                      "type": "stack",
                      "className": "panel-box",
                      "gap": 2,
                      "children": [
                        { "type": "field", "component": "heading", "text": "Risks" },
                        { "type": "field", "component": "text", "text": "@risks" }
                      ]
                    }
                  },
                  {
                    "node": {
                      "type": "stack",
                      "className": "panel-box",
                      "gap": 2,
                      "children": [
                        { "type": "field", "component": "heading", "text": "Reminders" },
                        { "type": "field", "component": "text", "text": "@reminders" }
                      ]
                    }
                  }
                ]
              }
            ]
          },
          { "type": "field", "component": "text", "text": "@footer", "className": "text-body-secondary small mb-0" }
        ]
      }
    }
  }
}
