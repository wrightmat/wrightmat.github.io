{
  "id": "letter-sheet",
  "title": "Letter Character Spread",
  "description": "Full-page character layout with matching notes back for double-sided runs.",
  "type": "sheet",
  "formats": [
    {
      "id": "letter",
      "label": "US Letter",
      "sizeId": "letter",
      "orientations": [
        "portrait",
        "landscape"
      ],
      "defaultOrientation": "portrait"
    }
  ],
  "supportedSources": [
    "ddb",
    "srd",
    "json",
    "manual"
  ],
  "pages": {
    "front": {
      "data": "@",
      "layout": {
        "type": "stack",
        "gap": 6,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "row",
                "gap": 2,
                "columns": [
                  {
                    "node": {
                      "type": "field",
                      "component": "text",
                      "text": "@identity.name",
                      "textSize": "lg",
                      "textStyles": {
                        "bold": true
                      }
                    }
                  },
                  {
                    "node": {
                      "type": "field",
                      "component": "text",
                      "text": "@identity.class",
                      "className": "badge text-bg-primary"
                    }
                  }
                ]
              },
              {
                "type": "field",
                "component": "text",
                "text": "@background.name",
                "className": "mb-0 text-body-secondary"
              }
            ]
          },
          {
            "type": "row",
            "className": "sheet-grid",
            "gap": 4,
            "columns": [
              {
                "node": {
                  "type": "stack",
                  "className": "panel-box",
                  "gap": 4,
                  "children": [
                    {
                      "type": "field",
                      "component": "text",
                      "text": "Character Snapshot",
                      "className": "fw-semibold",
                      "textSize": "lg",
                      "textStyles": {
                        "bold": true
                      }
                    },
                    {
                      "type": "row",
                      "gap": 3,
                      "columns": [
                        {
                          "node": {
                            "type": "field",
                            "component": "stat",
                            "label": "Class",
                            "text": "@identity.class",
                            "className": "press-block",
                            "gap": 2,
                            "style": {
                              "borderColor": "#adb5bd",
                              "borderWidth": 1,
                              "borderStyle": "solid",
                              "borderRadius": 6,
                              "borderSides": {
                                "top": true,
                                "right": true,
                                "bottom": true,
                                "left": true
                              }
                            }
                          }
                        },
                        {
                          "node": {
                            "type": "field",
                            "component": "stat",
                            "label": "Level",
                            "text": "@identity.level",
                            "className": "press-block",
                            "gap": 2,
                            "style": {
                              "borderColor": "#adb5bd",
                              "borderWidth": 1,
                              "borderStyle": "solid",
                              "borderRadius": 6,
                              "borderSides": {
                                "top": true,
                                "right": true,
                                "bottom": true,
                                "left": true
                              }
                            }
                          }
                        },
                        {
                          "node": {
                            "type": "field",
                            "component": "stat",
                            "label": "Race",
                            "text": "@identity.race",
                            "className": "press-block",
                            "gap": 2,
                            "style": {
                              "borderColor": "#adb5bd",
                              "borderWidth": 1,
                              "borderStyle": "solid",
                              "borderRadius": 6,
                              "borderSides": {
                                "top": true,
                                "right": true,
                                "bottom": true,
                                "left": true
                              }
                            }
                          }
                        },
                        {
                          "node": {
                            "type": "field",
                            "component": "stat",
                            "label": "Background",
                            "text": "@background.name",
                            "className": "press-block",
                            "gap": 2,
                            "style": {
                              "borderColor": "#adb5bd",
                              "borderWidth": 1,
                              "borderStyle": "solid",
                              "borderRadius": 6,
                              "borderSides": {
                                "top": true,
                                "right": true,
                                "bottom": true,
                                "left": true
                              }
                            }
                          }
                        },
                        {
                          "node": {
                            "type": "field",
                            "component": "stat",
                            "label": "Alignment",
                            "text": "@alignment.friendlyName",
                            "className": "press-block",
                            "gap": 2,
                            "style": {
                              "borderColor": "#adb5bd",
                              "borderWidth": 1,
                              "borderStyle": "solid",
                              "borderRadius": 6,
                              "borderSides": {
                                "top": true,
                                "right": true,
                                "bottom": true,
                                "left": true
                              }
                            }
                          }
                        },
                        {
                          "node": {
                            "type": "field",
                            "component": "stat",
                            "label": "Inspiration",
                            "text": "@identity.inspiration",
                            "className": "press-block",
                            "gap": 2,
                            "style": {
                              "borderColor": "#adb5bd",
                              "borderWidth": 1,
                              "borderStyle": "solid",
                              "borderRadius": 6,
                              "borderSides": {
                                "top": true,
                                "right": true,
                                "bottom": true,
                                "left": true
                              }
                            }
                          }
                        }
                      ]
                    },
                    {
                      "type": "field",
                      "component": "text",
                      "text": "Highlights",
                      "textSize": "lg",
                      "textStyles": {
                        "bold": true
                      }
                    },
                    {
                      "type": "field",
                      "component": "text",
                      "text": "Quick summary of combat moves, exploration tricks, and social edges used to confirm spacing.",
                      "className": "mb-0"
                    },
                    {
                      "type": "field",
                      "component": "list",
                      "itemsBind": "@features",
                      "className": "d-flex flex-column gap-1"
                    }
                  ]
                }
              },
              {
                "node": {
                  "type": "stack",
                  "className": "panel-box",
                  "gap": 3,
                  "children": [
                    {
                      "type": "field",
                      "component": "text",
                      "text": "Inventory & Slots",
                      "textSize": "lg",
                      "textStyles": {
                        "bold": true
                      }
                    },
                    {
                      "type": "field",
                      "component": "text",
                      "text": "Slots mirror the Scriptorium starter pack for quick alignment.",
                      "className": "mb-0"
                    },
                    {
                      "type": "field",
                      "component": "list",
                      "itemsBind": "@inventory.0",
                      "className": "d-flex flex-column gap-1"
                    }
                  ]
                }
              }
            ]
          },
          {
            "type": "field",
            "component": "text",
            "text": "@notes.backstory",
            "className": "text-body-secondary small mb-0"
          }
        ]
      }
    },
    "back": {
      "data": "@",
      "layout": {
        "type": "stack",
        "gap": 6,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "row",
                "gap": 2,
                "columns": [
                  {
                    "node": {
                      "type": "field",
                      "component": "text",
                      "text": "@identity.name",
                      "textSize": "lg",
                      "textStyles": {
                        "bold": true
                      }
                    }
                  },
                  {
                    "node": {
                      "type": "field",
                      "component": "text",
                      "text": "@identity.class",
                      "className": "badge text-bg-primary"
                    }
                  }
                ]
              },
              {
                "type": "field",
                "component": "text",
                "text": "@background.feature",
                "className": "mb-0 text-body-secondary"
              }
            ]
          },
          {
            "type": "stack",
            "className": "panel-box flex-grow-1",
            "gap": 4,
            "children": [
              {
                "type": "field",
                "component": "text",
                "text": "Session Log",
                "textSize": "lg",
                "textStyles": {
                  "bold": true
                }
              },
              {
                "type": "field",
                "component": "noteLines"
              },
              {
                "type": "row",
                "className": "panel-columns",
                "gap": 3,
                "columns": [
                  {
                    "node": {
                      "type": "stack",
                      "className": "panel-box",
                      "gap": 2,
                      "children": [
                        {
                          "type": "field",
                          "component": "text",
                          "text": "Allies",
                          "textSize": "lg",
                          "textStyles": {
                            "bold": true
                          }
                        },
                        {
                          "type": "field",
                          "component": "text",
                          "text": "@notes.allies"
                        }
                      ]
                    }
                  },
                  {
                    "node": {
                      "type": "stack",
                      "className": "panel-box",
                      "gap": 2,
                      "children": [
                        {
                          "type": "field",
                          "component": "text",
                          "text": "Risks",
                          "textSize": "lg",
                          "textStyles": {
                            "bold": true
                          }
                        },
                        {
                          "type": "field",
                          "component": "text",
                          "text": "@notes.enemies"
                        }
                      ]
                    }
                  },
                  {
                    "node": {
                      "type": "stack",
                      "className": "panel-box",
                      "gap": 2,
                      "children": [
                        {
                          "type": "field",
                          "component": "text",
                          "text": "Reminders",
                          "textSize": "lg",
                          "textStyles": {
                            "bold": true
                          }
                        },
                        {
                          "type": "field",
                          "component": "text",
                          "text": "@notes.otherNotes"
                        }
                      ]
                    }
                  }
                ]
              }
            ]
          },
          {
            "type": "field",
            "component": "text",
            "text": "@notes.otherHoldings",
            "className": "text-body-secondary small mb-0"
          }
        ]
      }
    }
  }
}
