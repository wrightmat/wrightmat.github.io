{
  "id": "a6-sheet",
  "title": "A6 Sheet",
  "description": "Standalone A6 preview sized for inserts and small handouts.",
  "type": "sheet",
  "formats": [
    {
      "id": "a6",
      "label": "A6",
      "sizeId": "a6",
      "orientations": [
        "portrait"
      ],
      "defaultOrientation": "portrait"
    }
  ],
  "supportedSources": [
    "json",
    "manual"
  ],
  "pages": {
    "front": {
      "data": "@",
      "layout": {
        "type": "stack",
        "gap": 5,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "field",
                "component": "text",
                "text": "@identity.name",
                "textSize": "lg",
                "textStyles": {
                  "bold": true
                }
              },
              {
                "type": "field",
                "component": "text",
                "text": "@background.name",
                "className": "mb-0 text-body-secondary"
              }
            ]
          },
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "field",
                "component": "text",
                "text": "Front Content",
                "textSize": "lg",
                "textStyles": {
                  "bold": true
                }
              },
              {
                "type": "field",
                "component": "text",
                "text": "@notes.backstory",
                "className": "mb-0"
              }
            ]
          }
        ]
      }
    },
    "back": {
      "data": "@",
      "layout": {
        "type": "stack",
        "gap": 5,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "field",
                "component": "text",
                "text": "@identity.name",
                "textSize": "lg",
                "textStyles": {
                  "bold": true
                }
              },
              {
                "type": "field",
                "component": "text",
                "text": "@background.feature",
                "className": "mb-0 text-body-secondary"
              }
            ]
          },
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              {
                "type": "field",
                "component": "text",
                "text": "Back Content",
                "textSize": "lg",
                "textStyles": {
                  "bold": true
                }
              },
              {
                "type": "field",
                "component": "text",
                "text": "@notes.otherNotes",
                "className": "mb-0"
              }
            ]
          }
        ]
      }
    }
  }
}
