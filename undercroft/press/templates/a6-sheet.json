{
  "id": "a6-sheet",
  "title": "A6 Sheet",
  "description": "Standalone A6 preview sized for inserts and small handouts.",
  "type": "sheet",
  "formats": [
    { "id": "a6", "label": "A6", "sizeId": "a6", "orientations": ["portrait"], "defaultOrientation": "portrait" }
  ],
  "supportedSources": ["json", "manual"],
  "pages": {
    "front": {
      "data": "@front",
      "layout": {
        "type": "stack",
        "gap": 5,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              { "type": "field", "component": "heading", "text": "@title" },
              { "type": "field", "component": "text", "text": "@subtitle", "className": "mb-0 text-body-secondary" }
            ]
          },
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              { "type": "field", "component": "heading", "text": "Front Content" },
              { "type": "field", "component": "text", "text": "@body", "className": "mb-0" }
            ]
          }
        ]
      }
    },
    "back": {
      "data": "@back",
      "layout": {
        "type": "stack",
        "gap": 5,
        "children": [
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              { "type": "field", "component": "heading", "text": "@title" },
              { "type": "field", "component": "text", "text": "@subtitle", "className": "mb-0 text-body-secondary" }
            ]
          },
          {
            "type": "stack",
            "className": "panel-box",
            "gap": 3,
            "children": [
              { "type": "field", "component": "heading", "text": "Back Content" },
              { "type": "field", "component": "text", "text": "@body", "className": "mb-0" }
            ]
          }
        ]
      }
    }
  }
}
