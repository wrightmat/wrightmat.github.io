{
  "id": "card-grid",
  "title": "Poker Card Grid (3 \u00d7 3)",
  "description": "Print-ready 3 \u00d7 3 grid of poker-sized cards with paired fronts and backs.",
  "type": "card",
  "formats": [
    {
      "id": "letter",
      "label": "US Letter",
      "sizeId": "letter",
      "orientations": [
        "portrait",
        "landscape"
      ],
      "defaultOrientation": "portrait"
    },
    {
      "id": "a4",
      "label": "A4",
      "sizeId": "a4",
      "orientations": [
        "portrait",
        "landscape"
      ],
      "defaultOrientation": "portrait"
    }
  ],
  "supportedSources": [
    "ddb",
    "srd",
    "json",
    "manual"
  ],
  "card": {
    "width": 2.5,
    "height": 3.5,
    "gutter": 0,
    "safeInset": 0.125,
    "columns": 3,
    "rows": 3
  },
  "pages": {
    "front": {
      "repeat": "@features",
      "layout": {
        "type": "stack",
        "gap": 4,
        "children": [
          {
            "type": "row",
            "gap": 2,
            "columns": [
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "Feature",
                  "className": "card-meta"
                }
              },
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "",
                  "className": "card-meta text-end"
                }
              }
            ]
          },
          {
            "type": "field",
            "component": "text",
            "text": "@name",
            "className": "card-title",
            "textSize": "lg",
            "textStyles": {
              "bold": true
            }
          },
          {
            "type": "field",
            "component": "text",
            "text": "@description",
            "className": "card-body-text"
          },
          {
            "type": "field",
            "component": "text",
            "text": "",
            "className": "card-footer"
          }
        ]
      }
    },
    "back": {
      "repeat": "@attacks",
      "layout": {
        "type": "stack",
        "gap": 4,
        "children": [
          {
            "type": "row",
            "gap": 2,
            "columns": [
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "Attack",
                  "className": "card-meta"
                }
              },
              {
                "node": {
                  "type": "field",
                  "component": "text",
                  "text": "@attackBonus",
                  "className": "card-meta text-end"
                }
              }
            ]
          },
          {
            "type": "field",
            "component": "text",
            "text": "@name",
            "className": "card-title",
            "textSize": "lg",
            "textStyles": {
              "bold": true
            }
          },
          {
            "type": "field",
            "component": "text",
            "text": "@damage",
            "className": "card-body-text"
          },
          {
            "type": "field",
            "component": "text",
            "text": "@notes",
            "className": "card-footer"
          }
        ]
      }
    }
  }
}
